<section class="container">
  <div class="row">
    <!-- main content -->
    <section class="col-sm-8 maincontent" >
      <h3><%= @post.title %></h3>
      <small><%= @post.created_at.strftime("%b %d. %Y") %></small>
      <p>Create By  :<%= @post.admin_user.name %></p>
      <p><%= raw(@post.content) %></p>
        <%= image_tag @post.pic.url%>

    </section>
    <aside class="col-sm-4 sidebar sidebar-right box-shadow box-radius">

      <div class="panel">
        <h4><%= @category.name %></h4>
        <ul class="list-unstyled list-spaces">

          <% @allpost.each do |post| %>
              <li><%= link_to post.title,posts_show_path(:id=>post.id) %></li>
          <% end %>


        </ul>
      </div>

    </aside>

  </div>
