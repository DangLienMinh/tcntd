
 	<header id="head" class="secondary">
            <div class="container">
                    <h1><%= @department.name%></h1>
                    <p><%= @department.slogan%></p>
                </div>
    </header>


    <!-- container -->
    <section class="container" style="padding-top: 20px;">
        <div class="row">
            <!-- main content -->
            <section class="col-sm-8 maincontent">
                <%= raw @department.description %>
            </section>
            <!-- /main -->

            <!-- Sidebar -->

                <% @category.each do |cate| %>  <aside class="col-sm-4 sidebar sidebar-right box-shadow box-radius" style="margin-top: 30px;">
                    <% if !cate.posts.where("page_id=?",@department.id).empty? %>
                        <div class="panel">
                          <h4 style="background: #3D84E6 none repeat scroll 0% 0%;
                                  color: #FFF;
                                  padding: 10px;
                                  text-transform: uppercase;margin-top: 0px;"><%= cate.name %></h4>
                            <ul class="list-unstyled list-spaces">
                                <% cate.posts.where("page_id=?",@department.id).each do |post| %>
                                  <li><%= link_to post.name,post_path(post) %><br>
                                    <span class="small text-muted"><%= post.summary %></span>
                                  </li>
                                <% end %>
                            </ul>
                        </div>
                    <% end %>
        </aside>
                <% end %>

            <!-- /Sidebar -->

        </div>
    </section>
    <!-- /container -->
