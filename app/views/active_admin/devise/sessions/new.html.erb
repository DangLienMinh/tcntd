<h2>ĐĂNG NHẬP HỆ QUẢN TRỊ NỘI DUNG TRƯỜNG TRUNG CẤP NGHỀ THỦ ĐỨC</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label "Mật khẩu" %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>
  <div class="field">
      <%= f.label "Xác nhận không phải là robot" %>
      <%= recaptcha_tags %>
    </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label "Ghi nhớ tôi" %>
    </div>
  <% end -%>
  
  <div class="actions">
    <%= f.submit "Đăng nhập" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
